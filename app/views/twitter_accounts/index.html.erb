<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>
  <%= button_to "Connect a Twitter account", "/auth/twitter", data: {turbo: "false"}, method: :post, class: "btn btn-primary" %>
</div>



<% @twitter_accounts.each do |twitter_account| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag twitter_account.image, class: "rounded-circle" %>
      <%= link_to "@#{twitter_account.username}", "https://x.com/#{twitter_account.username}", target: :_blank %>
    </div>

<!-- by giving an active record "twitter_account", it automatically calls /twitter_accounts/:id -->
    <%= button_to "Disconnect", twitter_account, method: :delete, class: "btn btn-danger", data: {turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>

