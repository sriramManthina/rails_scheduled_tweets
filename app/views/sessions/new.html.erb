<h2>Sign In Form</h2>
<%= form_with url: sign_in_path, data: { turbo: false } do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: 'steve@apple.com', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: 'password', required: true %>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>